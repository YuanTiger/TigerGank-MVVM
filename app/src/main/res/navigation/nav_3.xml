<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_3"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.my.gank.study.navigation.three.Navigation_HomeFragment_3"
        android:label="fragment_home_3"
        tools:layout="@layout/fragment_navigation_3">

        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment_3"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />


        <deepLink app:uri="www.yuanTiger.com/{params}" />
    </fragment>


    <fragment
        android:id="@+id/detailFragment_3"
        android:name="com.my.gank.study.navigation.three.Navigation_UserDetailFragment_3"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_navigation_detail_3">


        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

</navigation>